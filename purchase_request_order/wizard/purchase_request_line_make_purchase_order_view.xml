<odoo>

    <record id="view_purchase_request_line_make_purchase_order_inherit" model="ir.ui.view">
        <field name="name">Purchase Request Line Make Purchase Order Inherit</field>
        <field name="model">purchase.request.line.make.purchase.order</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_line_make_purchase_order"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//form[1]" position='replace'>
             <form string="Create RFQ">
                 <group>
                     <field name="supplier_id"/>
                 </group>
                 <newline/>

                 <newline/>

                 <group>
                     <field name="item_ids" nolabel="1" colspan="2">
                          <tree string="Details" create="false" editable="bottom">
                              <field name="line_id"
                                   options="{'no_open': true}"
                                   invisible="1"/>
                              <field name="request_id" readonly="1"/>
                              <field name="product_id" readonly="1"/>
                              <field name="name"/>
                              <field name="product_qty"/>
                              <field name="product_uom_id"
                                     groups="product.group_uom"/>
                              <field name="keep_description"/>
                          </tree>
                     </field>
                 </group>
                 <newline/>
                 <footer>
                     <button name="make_purchase_order"
                             string="Crear RFQ" type="object"
                             class="oe_highlight"/>
                     <button special="cancel" string="Cancel" class="oe_link"/>
                 </footer>
            </form>

            </xpath>
        </field>
    </record>


</odoo>

